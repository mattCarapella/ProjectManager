@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row pb-4">
    <div class="col-md-12 mb-4 pl-3 pr-3 form-center">
        <form id="registerForm" class="w-70" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1 class="mt-4 mb-4" style="font-weight: 700 !important; text-align: center !important;">
                Create a new account
            </h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <label asp-for="Input.UserName">User Name</label>
                <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.FirstName">First Name</label>
                <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.LastName">Last Name</label>
                <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-submit mt-3">
                Register
            </button>
        </form>
        
    </div>
</div>
<div class="center-link">
        <a asp-area="Identity" asp-page="/Account/Login" class="link-center">Already have an account? Log In.</a>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
