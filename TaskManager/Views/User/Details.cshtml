@{ ViewData["Title"] = "User Details"; }
@model TaskManager.Core.ViewModels.UserViewModel

<h1>@Model.User.UserName</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.JobTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.JobTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.EmployeeID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.EmployeeID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.LastLoggedInAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.LastLoggedInAt)
        </dd>
        <dt class = "col-sm-2">
            Roles
        </dt>
        <dd class = "col-sm-10">
            <ul>
                @foreach (var role in @Model.Roles)
                {
                    <li>@role</li>
                }
            </ul>
        </dd>
        
    </dl>
    <h4>Projects</h4>
    <hr />
    <dd class="col-sm-10">
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>Goal Date</th>
            </tr>
            @foreach (var item in Model.User.Projects)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Project.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Project.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Project.CreatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.Project.GoalDate)</td>
                    <td><a asp-controller="Projects" asp-action="Details" asp-route-id="@item.Project.Id">Details</a></td>
                </tr>
            }
        </table>
    </dd>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.User.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

