@{
    ViewData["Title"] = "Users Page";
}
@using TaskManager.Areas.Identity.Data
@using TaskManager.Core
@using TaskManager.Core.Enums
@using static TaskManager.Core.Enums.Enums
@model PaginatedList<ApplicationUser>

<div class="main-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-12 col-lg-12">
                <div class="page-content">
                    <div class="wrapper mb-2">
                        <div class="media">
                            <img class="header-img" alt="Image" src="~/images/projectA100.png" overflow="hidden" />
                            <span class="header-text pl-4 pt-2">All Users</span>
                        </div>
                    </div>
                    <table class="table table-bordered table-responsive mt-4">
                        <thead class="align-items-center">
                            <tr>
                                <th scope="col">Last</th>
                                <th scope="col">First</th>
                                <th scope="col">Username</th>
                                <th scope="col">Email</th>
                                <th scope="col">Employee ID</th>
                                <th scope="col">Job Title</th>
                                <th scope="col">Created At</th>
                                <th scope="col">Last Logged In</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.LastName</td>
                                    <td>@user.FirstName</td>
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td>@user.EmployeeID</td>
                                    <td>@user.JobTitle</td>
                                    <td>@user.CreatedAt</td>
                                    <td>@user.LastLoggedInAt</td>
                                    <td>
                                        <div class="button-group pt-1">
                                            <button class="btn btn-round-sm mr-1">
                                                <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id" data-toggle="tooltip" data-title="Project details">
                                                    <i class="material-icons btn-icon btn-icon-sm">format_align_right</i>
                                                </a>
                                            </button>
                                            <button class="btn btn-round-sm mr-1">
                                                <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">
                                                    <i class="material-icons btn-icon btn-icon-sm">create</i>
                                                </a>

                                            </button>
                                            <button class="btn btn-round-sm mr-1">
                                                <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">
                                                    <i class="material-icons btn-icon btn-icon-sm">delete</i>
                                                </a>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
