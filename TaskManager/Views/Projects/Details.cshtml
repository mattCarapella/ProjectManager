@*@model TaskManager.Models.Project*@
@model TaskManager.Core.ViewModels.Project.ProjectDetailsViewModel

@{
    ViewData["Title"] = "Project Details";
}

<div><a href="javascript:history.go(-1)">Back</a></div>

<div class="main-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-11">
                <div class="page-header">
                    <div class="wrapper">
                        <span class="header-text">@Html.DisplayFor(modelItem => @Model.Project.Name)</span>
                        @if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdmin", "RequireManager")).Succeeded)
                        {
                            <span class="center-vert">
                                <button class="btn btn-primary btn-cstm-link">
                                    <a asp-action="Edit" asp-route-id="@Model?.Project.Id" class="btn-cstm-link-text-light">Edit</a>
                                </button>
                            </span>
                        }
                    </div>

                    @***** PROJECT DETAILS *****@
                    <p class="lead">@Html.DisplayFor(modelItem => @Model.Project.Description)</p>
                    <div>
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Project.Tag)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Project.Tag)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Project.CreatedAt)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Project.CreatedAt)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Project.GoalDate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Project.GoalDate)
                            </dd>
                        </dl>
                    </div>

                    @***** PROJECT CONTRIBUTERS *****@
                    <div class="d-flex align-items-center">
                        <ul class="avatars">
                            @foreach (var item in @Model.Contributers)
                            {
                                <li>
                                    <a asp-controller="User" asp-action="Details" asp-route-id="@item.ApplicationUser.Id"
                                   data-toggle="tooltip" data-placement="top" title="@item.ApplicationUser.FullName">
                                        <img alt="@item.ApplicationUser.UserName" class="avatar profile-pic details-avatar"
                                         src="~/images/@item.ApplicationUser.ProfilePicture" />
                                    </a>
                                </li>
                            }
                        </ul>
                        @if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdmin", "RequireManager")).Succeeded)
                        {
                            <button class="btn btn-round btn-icon-offset flex-shrink-0" data-toggle="tooltip" data-title="Manage project members">
                                <a asp-controller="Projects" asp-action="ManageUsers" asp-route-id="@Model?.Project.Id">
                                    <i class="material-icons plus-button">add</i>
                                </a>
                            </button>
                        }
                    </div>
                    <div>
                        <div class="d-flex justify-content-between text-small">
                            <div class="d-flex align-items-center">
                                <h5 class="pt-1">@Model.Contributers.Count() contributers</h5>
                            </div>
                            <span class="pt-1"> @*Calculate days to goal date*@</span>
                        </div>
                    </div>
                </div>

