@model TaskManager.Models.Project
@{
    ViewData["Title"] = "Add a project";
}

<div><a href="javascript:history.go(-1)">Back</a></div>

<div class="container create--container pt-4 pb-4">
    <h1 class="mb-3">Add a project</h1>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="project-create--form">
            <div class="form-group pb-3">
                <label asp-for="Name" class="control-label form-label-text"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group pb-3">
                <label asp-for="Description" class="control-label form-label-text">Description</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group pb-3">
                <label asp-for="Tag" class="control-label form-label-text">Tags</label>
                <input asp-for="Tag" class="form-control" />
                <span asp-validation-for="Tag" class="text-danger"></span>
            </div>
            <div class="form-group pb-3">
                <label asp-for="GoalDate" class="control-label form-label-text"></label>
                <input asp-for="GoalDate" class="form-control" />
                <span asp-validation-for="GoalDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-submit-lg mt-3"/>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
