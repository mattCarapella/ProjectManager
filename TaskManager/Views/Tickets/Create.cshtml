@using static TaskManager.Core.Enums.Enums
@model TaskManager.Models.Ticket
@{ ViewData["Title"] = "Submit a Ticket"; }

<script src="~/js/ckeditor/ckeditor.js"></script>

<div><a href="javascript:history.go(-1)">Back</a></div>

<div class="container create--container pt-4 pb-4">
    <h1 class="mb-3">Open a new ticket</h1>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group pb-1">
            <label asp-for="Title" class="control-label form-label-text"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group pb-1">
            <label asp-for="Description" class="control-label form-label-text">Description</label>
            <textarea asp-for="Description" id="Description" class="ckeditor" name="Description" rows="15"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group pb-1">
            <label asp-for="Tag" class="control-label form-label-text"></label>
            <input asp-for="Tag" class="form-control" />
            <span asp-validation-for="Tag" class="text-danger"></span>
        </div>
        <div class="form-group pb-1">
            <label asp-for="TicketType" class="control-label form-label-text"></label>
            <select asp-for="TicketType" class="form-control" asp-items="Html.GetEnumSelectList<TicketType>()">
                <option value=""> - Select - </option>
            </select>
        </div>
        <div class="form-group pb-1">
            <label asp-for="Priority" class="control-label form-label-text"></label>
            <select asp-for="Priority" class="form-control" asp-items="Html.GetEnumSelectList<Priority>()">
                <option value=""> - Select - </option>
            </select>
        </div>
        <div class="form-group pb-1">
            <label asp-for="GoalDate" class="control-label form-label-text"></label>
            <input asp-for="GoalDate" class="form-control" />
            <span asp-validation-for="GoalDate" class="text-danger"></span>
        </div>
        <div class="form-group pb-1">
            <label asp-for="Project" class="control-label form-label-text"></label>
            <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.Project"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-submit-lg mt-4 mb-2"/>
        </div>
    </form>
</div>

<script>
    $(document).ready(function() {
        CKEDITOR.replace('#Description');
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
