@using static TaskManager.Core.Enums.Enums
@model TaskManager.Models.Ticket

@{
    ViewData["Title"] = "Edit";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/ckeditor/ckeditor.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


<div><a href="javascript:history.go(-1)">Back</a></div>

<div class="container create--container pt-3">
    <h1 class="ticket-header-text mb-4">Update Ticket</h1>
    <form asp-controller="Tickets" asp-action="Edit" asp-route-id="@Model.TicketId" method="post" role="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="TicketId" />
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" id="Description" class="ckeditor" name="Description" rows="15"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Tag" class="control-label"></label>
            <input asp-for="Tag" class="form-control" />
            <span asp-validation-for="Tag" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TicketType" control="control-label"></label>
            <select asp-for="TicketType" class="form-control" asp-items="Html.GetEnumSelectList<TicketType>()">
                <option value="">- Select -</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Status" control="control-label"></label>
            <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Status>()">
                <option value="">- Select -</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Priority" class="control-label">Priority <em>(1 to 5)</em></label>
            <input asp-for="Priority" class="form-control" />
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GoalDate" class="control-label"></label>
            <input asp-for="GoalDate" class="form-control" />
            <span asp-validation-for="GoalDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Project" class="control-label">Project</label>
            <select asp-for="Project" class="form-control" asp-items="ViewBag.Project"></select>
            <span asp-validation-for="Project" class="text-danger"></span>
        </div>
        <div class="form-group mt-4 mb-2">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>

<script>
    $(document).ready(function() {
        CKEDITOR.replace('#Description');
    });
</script>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}



