@*@model TaskManager.Models.Ticket*@
@model TaskManager.Core.ViewModels.Ticket.TicketDetailsViewModel;

@{
    ViewData["Title"] = "Ticket Details";
}

<div><a href="javascript:history.go(-1)">Back</a></div>

<div class="main-container">
    <div class="container pb-2">
        <div class="row justify-content-center">
            <div class="col-xl-12 col-lg-12">
                <div class="page-header mb-2">
                    <div class="wrapper">
                        <div class="media">
                            <img alt="Image" src="~/images/user.jpg" class="profile-pic avatar avatar-lg mt-1" overflow="hidden" />
                            <div class="media-body ml-3">
                                <h1 class="mb-0">@Model.Ticket.Title</h1>
                                <p class="lead">
                                    <strong>Project: </strong>
                                    <a class="name-link" asp-controller="Projects" asp-action="Details" asp-route-id="@Model.Project.Id">
                                        @Model.Project.Name
                                    </a>
                                </p>
                            </div>
                        </div>
                        <span class="center-vert">
                            <div class="button-group">
                                @if (@Model.Ticket.Status == TaskManager.Core.Enums.Enums.Status.INPROGRESS)
                                {
                                    <form asp-controller="Tickets"
                                      asp-action="SubmitForReview"
                                      asp-route-ticketId="@Model.Ticket.TicketId"
                                      method="post"
                                      role="form">
                                        <input id="Submit" class="btn btn-primary mr-2" type="submit" value="Submit for Review" />
                                    </form>
                                }

                                @if (@Model.Ticket.Status == TaskManager.Core.Enums.Enums.Status.SUBMITTED)
                                {
                                    @if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdmin", "RequireManager")).Succeeded)
                                    {
                                        <form asp-controller="Tickets"
                                      asp-action="MarkAsCompleted"
                                      asp-route-ticketId="@Model.Ticket.TicketId"
                                      method="post"
                                      role="form">
                                            <input id="Submit" class="btn btn-primary mr-2" type="submit" value="Mark as Completed" />
                                        </form>
                                    }

                                }

                                @if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdmin", "RequireManager")).Succeeded)
                                {

                                    <button class="btn btn-primary">
                                        <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@Model.Ticket.TicketId" class="btn-cstm-link-text-light">Edit Details</a>
                                    </button>
                                }
                            </div>
                        </span>
                    </div>
                </div>
                <hr />
                <div>
                    @***** TICKET DESCRIPTION ***** *@
                    <dl class="row">
                        <dt class="col-lg-12">
                            @*@Html.DisplayFor(model => model.Ticket.Description)*@
                            @Html.Raw(@Model.Ticket.Description)
                        </dt>
                    </dl>
                    <hr />
                    <div class="row">
                        @***** TICKET DETAILS *****@
                        <div class="col-xl-6 col-lg-6 mt-2">
                            <div class="container">
                                <dl class="row">
                                    <dt class="col-sm-4">
                                        <strong>@Html.DisplayNameFor(model => model.Ticket.TicketType)</strong>
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Ticket.TicketType)
                                    </dd>
                                    <dt class="col-sm-4">
                                        <strong>@Html.DisplayNameFor(model => model.Ticket.Status)</strong>
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Ticket.Status)
                                    </dd>
                                    <dt class="col-sm-4">
                                        <strong>@Html.DisplayNameFor(model => model.Ticket.Priority)</strong>
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Ticket.Priority)
                                    </dd>
                                    <dt class="col-sm-4">
                                        <strong>@Html.DisplayNameFor(model => model.Ticket.GoalDate)</strong>
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Ticket.GoalDate)
                                    </dd>
                                    <dt class="col-sm-4">
                                        <strong>@Html.DisplayNameFor(model => model.Ticket.UpdatedAt)</strong>
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Ticket.UpdatedAt)
                                    </dd>
                                </dl>
                                <p class="mt-2 mb-4">
                                    Submitted by
                                    <a class="name-link" asp-controller="User" asp-action="Details" asp-route-id="@Model.Ticket.SubmittedBy.Id">
                                        <strong>@Model.Ticket.SubmittedBy.FullName </strong>
                                    </a> on  </strong>@Model.Ticket.CreatedAt</strong>
                                </p>
                            </div>
                        </div>
                        @****** ASSIGN USER DROPDOWN ******@
                        <div class="col-xl-6 col-lg-6 mt-2">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@***** TICKET ASSIGNED TO *****@
<div class="d-flex align-items-center">
    <ul class="avatars">
        @foreach (var item in @Model.AssignedTo)
        {
            <li>
                <a asp-controller="User" asp-action="Details" asp-route-id="@item.ApplicationUser.Id"
               data-toggle="tooltip" data-placement="top" title="@item.ApplicationUser.FullName">
                    <img alt="@item.ApplicationUser.UserName" class="avatar profile-pic details-avatar"
                     src="~/images/@item.ApplicationUser.ProfilePicture" />
                </a>
            </li>
        }
    </ul>
    @if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdmin", "RequireManager")).Succeeded)
    {
        <button class="btn btn-round btn-icon-offset flex-shrink-0" data-toggle="tooltip" data-title="Manage ticket assignments">
            <a asp-controller="Tickets" asp-action="ManageUsers" asp-route-id="@Model?.Ticket.TicketId">
                <i class="material-icons">add</i>
            </a>
        </button>
    }
</div>
<div>
    <div class="d-flex justify-content-between text-small">
        <div class="d-flex align-items-center">
            @if (@Model.AssignedTo.Count() == 1)
            {
                <span class="pt-1 mb-3">Assigned to 1 person</span>
            }
            else
            {
                <span class="pt-1 mb-3">Assigned to @Model.AssignedTo.Count() people</span>
            }
        </div>
        <span class="pt-1"> @*Calculate days to goal date*@</span>
    </div>
</div>



