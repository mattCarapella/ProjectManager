@model TaskManager.Models.PNote

@{
    ViewData["Title"] = "Edit";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/ckeditor/ckeditor.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div><a href="javascript:history.go(-1)">Back</a></div>

<div class="container create--container pt-5">
    <h1 class="mb-3">Edit your note</h1>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group pb-2">
            <label asp-for="Title" class="control-label form-label-text"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group pb-2">
            <label asp-for="Content" class="control-label form-label-text"></label>
            <textarea asp-for="Content" id="Content" class="ckeditor form-control" rows="12"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group pb-2">
            <label asp-for="Link" class="control-label form-label-text"></label>
            <input asp-for="Link" class="form-control" />
            <span asp-validation-for="Link" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-dark-custom mt-2 mb-3" />
        </div>
    </form>
</div>

<script>
    $(document).ready(function() {
        CKEDITOR.replace('#Content');
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
