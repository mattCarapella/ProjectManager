@model TaskManager.Core.ViewModels.Note.TNoteCreateViewModel

@{
    ViewData["Title"] = "Add a note";
}

<div>
    <a href="javascript:history.go(-1)">Back</a>
</div>

<div class="container create--container pt-4 pb-4">
    <h1 class="mb-3">Add a note</h1>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.Note.TicketId" value="@Model.TicketId" />
        <div class="form-group pb-2">
            <label asp-for="@Model.Note.Title" class="control-label form-label-text"></label>
            <input asp-for="@Model.Note.Title" class="form-control" />
            <span asp-validation-for="@Model.Note.Title" class="text-danger"></span>
        </div>
        <div class="form-group pb-2">
            <label asp-for="@Model.Note.Content" class="control-label form-label-text">Content</label>
            <textarea asp-for="@Model.Note.Content" id="Content" class="ckeditor form-control" rows="12"></textarea>
            <span asp-validation-for="@Model.Note.Content" class="text-danger"></span>
        </div>
        <div class="form-group pb-2">
            <label asp-for="@Model.Note.Link" class="control-label form-label-text"></label>
            <input asp-for="@Model.Note.Link" class="form-control" />
            <span asp-validation-for="@Model.Note.Link" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-dark-custom mt-4"/>
        </div>
    </form>
</div>

<script>
    $(document).ready(function() {
        CKEDITOR.replace('#Content');
    });
</script>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
